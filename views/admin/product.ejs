<%- include('../_layouts/adminheader') %>

<h2 class="page-title">ALL Product</h2>

<a href="/admin/products/add-product" class="btn btn-primary">Add Product</a>
        
  <table class="table table-striped align-middle mt-4">
   <thead>
    <tr>
     <th>Product</th>
     <th>Category</th>
     <th>Price</th>
     <th>Image</th>
    </tr>
   </thead>
   <tbody>
    <% products.forEach(product =>{ %>
    <tr>
     <td><%= product.title %></td>
     <td><%= product.category %></td>
     <td>$<%= parseFloat(product.price).toFixed(2) %></td>
     <td>
      <% if(product.image == ""){ %>
          <img id="imagesize" src="/images/admin.png">
      <% }else { %>
          <img id="imagesize" src="/product_images/<%=product._id %>/<%= product.image %>">
      <% } %>
       
     </td>
     
     <td><a href="/admin/products/edit-product/<%= product._id %>" class="btn btn-success">Edit</a></td>
     <td><a href="/admin/products/delete-product/<%= product._id %>" class="btn btn-danger confirmDelete">Delete</a></td>
  
    </tr>

    <% }) %>
   </tbody>

 </table>




<%- include('../_layouts/adminfooter') %>